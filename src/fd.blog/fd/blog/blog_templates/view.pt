<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fd.blog">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <header class="page-header">
    <h1 tal:content="context/Title">Title inserted here</h1>
  </header>

  <p class="documentDescription lead" tal:condition="context/Description"
    tal:content="context/Description" />

  <section tal:condition="view/blogitems"
    tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;">

    <tal:block tal:repeat="item view/blogitems">
      <article>
        <div class="page-header">
          <h2><a href="" tal:attributes="href item/getURL"
                tal:content="item/Title" />
                <small tal:content="python:toLocalizedTime(item.effective)" />
          </h2>
        </div>
          <p tal:condition="item/Description"
            tal:content="item/Description" />

        <div class="row-fluid">
          <div class="span9">
            <tal:block tal:condition="python:view.commentsEnabled(item.getObject())">
              <a href="" class="btn btn-small"
                 tal:define="comment_count python:view.commentCount(item.getObject())"
                 rel="tooltip"
                 tal:attributes="href item/getURL;
                                 data-original-title string:${comment_count} Kommentare">
                <i class="icon-comment" />
                  <span i18n:translate="">Comments</span>
              </a>
            </tal:block>
          </div>
          <div class="span3">
            <a href="" class="btn btn-small"
              tal:attributes="href item/getURL">
              <i class="icon-eye-open" />
              Weiterlesen</a>
          </div>
          </div>
      </article>
    </tal:block>

  </section>
    
  </metal:content-core>
</metal:main>

</body>
</html>

