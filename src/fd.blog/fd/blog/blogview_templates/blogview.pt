<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fd.blog">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <header class="page-header">
    <h1 tal:content="context/Title">Title inserted here</h1>
  </header>

  <p class="documentDescription" tal:condition="context/Description"
    tal:content="context/Description" />

  <section tal:condition="view/blogitems">

    <tal:block tal:repeat="item view/blogitems">
      <article>
        <div class="page-header">
          <h2><a href="" tal:attributes="href item/getURL"
                tal:content="item/Title" />
          </h2>
          <p tal:content="item/Description" />
          <a href="" tal:attributes="href item/getURL">
            Weiterlesen</a>
        </div>
      </article>
    </tal:block>

  </section>
    
  </metal:content-core>
</metal:main>

</body>
</html>
