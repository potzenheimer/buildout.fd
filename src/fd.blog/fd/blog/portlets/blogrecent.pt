<div class="well"
    id="splashbox-blog-recent"
    i18n:domain="fd.blog">

    <h4 i18n:translate="">
        Letzte Blogbeitr&auml;ge
    </h4>
    <ul class="nav nav-list">
      <tal:block define="plone_view context/@@plone;"
        repeat="item view/items">
        <li class="nav-header">
          <span tal:content="item/Title">Entry Title</span>
          <small tal:content="python:plone_view.toLocalizedTime(item.ModificationDate)">
            1779</small>
        </li>
        <li>
          <span tal:define="desc item/Description;
                                  shortdesc python:plone_view.cropText(desc, 120, '...');"
                    tal:replace="shortdesc" />
                <a tal:attributes="href python:view.item_url(item)" class="link-more">
                    mehr
                </a>
        </li>
        <li class="divider"></li>
      </tal:block>
    </ul>
</div>
